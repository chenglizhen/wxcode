    width: 200rpx;
    height: 200rpx;
}
 
.content {
  margin: 0 50rpx 90rpx;
}
 
.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}
 
.bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
}

/* 自定义授权弹窗 */
.custom-dialog {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .4);
}
.custom-dialog.hide {
  display: none;
}
.custom-dialog .inner-content-wrap {
  position: relative;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 84%;
  background-color: #fff;
  border-radius: 4px;
}
.custom-dialog .inner-content-wrap .title {
  position: relative;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 36rpx;
  text-align: center;
  font-weight: bold;
}
.custom-dialog .inner-content-wrap .title:after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(.5) translate3d(0, 0, 0);
  background-color: #ccc;
}
.custom-dialog .content-wrap {
  margin: 40rpx 0 60rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}
.custom-dialog .content-wrap .flex-item {
  width: 100%;
  text-align: center;
}
.custom-dialog .content-wrap .tips {
  font-size: 34rpx;
}
.custom-dialog .content-wrap .line {
  margin: 10rpx 0 30rpx;
  width: 80%;
  height: 1px;
  transform: scaleY(.5) translate3d(0, 0, 0);
  background-color: #ccc;
}
.custom-dialog .content-wrap .sub-info {
  position: relative;
  font-size: 30rpx;
  color: #9d9d9d;
}
.custom-dialog .btn-list {
  display: flex;
  width: 100%;
  position: relative;
}
.custom-dialog .btn-list:before {
  content: '';
  position: absolute;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(.5) translate3d(0, 0, 0);
  background-color: #ccc;
}
.custom-dialog .btn-list:after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  width: 1px;
  height: 100%;
  transform: scaleX(.5) translate3d(0, 0, 0);
  background-color: #ccc;
}
.custom-dialog .btn-list .btn {
  width: 50%;
  padding: 10px;
  border: none;
  color: #000;
}
.custom-dialog .btn-list .btn.btn-hover {
  opacity: .8;
}
.custom-dialog .btn-list .confirm-btn {
  position: relative;
  color: #1AAD19;
}